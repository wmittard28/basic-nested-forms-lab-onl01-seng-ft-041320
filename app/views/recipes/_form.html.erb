<%= form_for @recipe do |f| %>

    <%= f.text_field :title %>
    <br>

    <%= f.fields_for :ingredients do |i| %>

        <%= i.label :name %>
        <%= i.text_field :name %>
        <br>
        <%= i.label :quantity %>
        <%= i.text_field :quantity %>

        <% end %>
    <%= f.submit %>

<% end %>
